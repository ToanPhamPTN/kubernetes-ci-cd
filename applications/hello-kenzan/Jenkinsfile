node {

    checkout scm

    env.DOCKER_API_VERSION="1.24"
    
    sh "git rev-parse --short HEAD > commit-id"

    tag = readFile('commit-id').replace("\n", "").replace("\r", "")
    appName = "hello-kenzan"
    registryHost = "127.0.0.1:30912/"
    imageName = "${registryHost}${appName}:${tag}"
    env.BUILDIMG=imageName

    echo "Commit ID: ${tag}"
    echo "Docker Image: ${imageName}"

    stage("Build") {
        echo "Building Docker image..."
        sh "docker build -t ${imageName} part1/hello-kenzan"
        echo "Build complete."
    }

    stage("Push") {
        echo "Pushing Docker image to registry..."
        sh "docker push ${imageName}"
        echo "Push complete."
    }

    stage("Deploy") {
        echo "Deploying application with image: ${BUILDIMG}"
        sh "sed 's#__IMAGE__#'$BUILDIMG'#' part1/hello-kenzan/k8s/deployment.yaml | kubectl apply -f -"
        echo "Deployment applied."
    }
}